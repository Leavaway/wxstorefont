<!--pages/goods_detail/goods_detail.wxml-->

<view class="detail_swiper">
    <swiper autoplay="{{true}}" circular="{{true}}" indicator-dots="{{true}}" interval="3000">
        <swiper-item wx:for="{{goods_detail.photo}}" data-url="{{item}}" bindtap="handlePreviewImage">
            <image mode="widthFix" src="{{item}}"/>
        </swiper-item>
    </swiper>
</view>

<view class="goods_price">￥{{goods_detail.price}}</view>
<view class="goods_name_row">
    <view class="goods_name">{{goods_detail.title}}</view>
    <view class="goods_collect" bindtap="handleCollect">
        <text class="iconfont icon-shoucang" wx:if="{{!isCollect}}"></text>
        <text class="iconfont icon-shoucangxuanzhong" wx:if="{{isCollect}}" ></text>
        <view class="collect_text">收藏</view>
    </view>
</view>

<view class="goods_info">
    <view class="goods_info_title">宝贝详情</view>
    <view class="goods_info_content">
        <rich-text nodes="{{goods_detail.detail}}"></rich-text>
    </view>
</view>

<view class="btm_tool">
    <view class="tool_item">
        <view class="iconfont icon-lianxikefu"></view>
        <view >客服</view>
        <button open-type="contact"></button>
    </view>
    <view class="tool_item">
        <view class="iconfont icon-fenxiang"></view>
        <view >分享</view>
        <button open-type="share"></button>
    </view>
    <navigator open-type="switchTab" url="/pages/cart/cart" class="tool_item">
        <view class="iconfont icon-gouwuche"></view>
        <view >购物车</view>
    </navigator>
    <view class="tool_item btn_cart" bindtap="handleCartAdd">
        加入购物车
    </view>
    <view class="tool_item btn_buy" bindtap="handleSuperCartAdd" >
        立即购买
    </view>
</view>
