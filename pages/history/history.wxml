
<!--pages/collect/collect.wxml-->
<view class="cart_content">
    <view class="cart_main">
        <view class="cart_item" wx:for="{{collect}}" wx:key="gid" bindtap="handleClick" data-gid="{{item.gid}}">
            <view class="cart_img_wrap">
                <image mode="widthFix" src="{{item.photo[0]}}"/>
            </view>
            <view class="cart_info_wrap">
                <view class="title_show">
                    <view class="goods_name">{{item.title}}</view>
                </view>
                <view class="goods_price_wrap">
                    <view class="goods_price"><text class="goods_price_sign">ï¿¥</text>{{item.price}}</view>
                </view>
            </view>
        </view>
    </view>
</view>
