<!--pages/goods_list/goods_list.wxml-->
<searchInput></searchInput>
<view class="first_tab">
    <navigator class="goods_item" wx:for="{{itemList}}" url="../goods_detail/goods_detail?gid={{item.gid}}" wx:key="gid">
        <view class="goods_img_wrap">
            <image mode="widthFix" src="{{item.photo[0]}}"/>
        </view>
        <view class="goods_info_wrap">
            <view class="goods_name">{{item.title}}</view>
            <view class="goods_price"><text style="font-size: 20rpx;">ï¿¥</text>{{item.price}}</view>
        </view>
    </navigator>
</view>