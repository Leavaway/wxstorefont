<!--pages/user/user.wxml-->
<view class="user_info_wrap">
    <view class="user_img_wrap">
        <image class="user_bg" src="{{userInfo.avatarUrl}}"></image>
        <view class="user_info">
            <image class="user_icon" src="{{userInfo.avatarUrl}}"></image>
            <view class="user_name">{{userInfo.nickName}}</view>
        </view>
    </view>
</view>

<view class="user_content">
    <view class="user_main">
        <!-- 历史足迹 -->
        <view class="history_wrap">
            <navigator url="../collect/collect?phone=15757610036">
                <view class="his_num">{{collectNum}}</view>
                <view class="his_name">收藏的商品</view>
            </navigator>
            <navigator url="../history/history">
                <view class="his_num">{{historyNum}}</view>
                <view class="his_name">历史足迹</view>
            </navigator>
        </view>
        <!-- 我的订单 -->
        <view class="orders_wrap">
            <view class="orders_title">我的订单</view>
            <view class="order_content">
                <navigator url="../order/order?phone=15757610036&orderStatus=1">
                    <view class="iconfont icon-quanbudingdan"></view>
                    <view class="order_name">全部订单</view>
                </navigator>
                <navigator url="../order/order?phone=15757610036&orderStatus=2">
                    <view class="iconfont icon-daishouhuo"></view>
                    <view class="order_name">待收货</view>
                </navigator>
                <navigator url="../order/order?phone=15757610036&orderStatus=3">
                    <view class="iconfont icon-shouhou"></view>
                    <view class="order_name">售后</view>
                </navigator>
            </view>
        </view>
        <view class="app_info_wrap">
            <view class="app_info_item app_info_contact">
                <text>联系客服</text>
                <text class="app_contact">15757610036</text>
            </view>
            <button open-type="feedback">意见反馈</button>
            <view class="app_info_last">
                关于我们
            </view>
        </view>
    </view>
</view>
