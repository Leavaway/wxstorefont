/* pages/user/user.wxss */
Page {
  background-color: #f5f5f5;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: #FF6464;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  width: 100%;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 15%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 30rpx;
  font-size: 35rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: #FF6464;
}
.user_content .user_main .history_wrap navigator .his_name {
  font: 25rpx "Microsoft YaHei";
}
.user_content .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
  border-radius: 15rpx;
}
.user_content .orders_wrap .orders_title {
  font: bold 30rpx "Microsoft YaHei";
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .orders_wrap .order_content {
  display: flex;
}
.user_content .orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .orders_wrap .order_content navigator .iconfont {
  color: #FF6464;
}
.user_content .orders_wrap .order_content .iconfont {
  font-size: 50rpx;
  margin: 10rpx;
}
.user_content .orders_wrap .order_content .order_name {
  font: 25rpx "Microsoft YaHei";
}
.user_content .app_info_wrap {
  border-radius: 15rpx;
  margin-top: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.user_content .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  font: 25rpx "Microsoft YaHei";
}
.user_content .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .app_info_wrap .app_info_contact .app_contact {
  color: gray;
}
.user_content .app_info_wrap .app_info_last {
  padding: 20rpx;
  font: 25rpx "Microsoft YaHei";
}
.user_content .app_info_wrap button {
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 7px 10px;
  margin: 0px;
  line-height: 1.6;
  border-radius: 0;
  border-bottom: 1rpx solid #ccc;
  font: 25rpx "Microsoft YaHei";
}
.user_content .app_info_wrap button::after {
  border: none;
  border-radius: 0;
}
