<!--pages/cart/cart.wxml-->

<!-- 顶部地址栏 -->
<view class="revice_address_row1" wx:if="{{!address.userName}}">
    <text class="iconfont icon-shouhuodizhi"></text>
    <view class="address_btn">
        <button bindtap="handleChooseAddress" type="primary" plain>获取收货地址</button>
    </view>
</view>
<view class="revice_address_row2" wx:if="{{address.userName}}">
    <text class="iconfont icon-shouhuodizhi"></text>
    <view class="address">
        <text class="shouhuo1" space="nbsp">{{address.userName}}         {{address.telNumber}}</text>
        <text class="shouhuo2" space="nbsp">{{address.provinceName}}{{address.cityName}}{{address.countyName}}{{address.detailInfo}}</text>
    </view>
</view>

<!-- 购物车内容 -->
<view class="cart_content" wx:if="{{cart[0]}}">
    <view class="cart_main">
        <view class="cart_item" wx:for="{{cart}}" wx:key="gid">
            <view class="cart_chk_wrap">
                <checkbox-group bindchange="">
                    <checkbox  />
                </checkbox-group>
            </view>
            <navigator class="cart_img_wrap" url="../goods_detail/goods_detail?gid={{item.gid}}">
                <image mode="widthFix" src="{{item.photo}}"/>
            </navigator>
            <view class="cart_info_wrap">
                <view class="goods_name">{{item.title}}</view>
                <view class="goods_price_wrap">
                    <view class="goods_price"><text class="goods_price_sign">￥</text>{{item.price}}</view>
                    <view class="cart_num_tool">
                        <view class="num_edit">-</view>
                        <view class="goods_num">{{item.amount}}</view>
                        <view class="num_edit">+</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

<!-- 底部工具栏 -->
<view class="footer_tool">
    <view class="all_chk_wrap">
        <checkbox-group bindchange="">
            <checkbox checked="{{item.checked}}"/>
        </checkbox-group>
    </view>
    <view class="total_price_wrap">
        <view class="total_price">
            合计: <text class="total_price_text">￥999</text>
        </view>
        <view >包含运费</view>
    </view>
    <view class="order_pay_wrap">
        结算(2)
    </view>
</view>

