/**index.wxss**/
page {
  background-color: #f5f5f5;
}
.index_swiper swiper {
  width: 750rpx;
  height: 350rpx;
  border-radius: 15rpx;
}
.index_swiper swiper image {
  border-radius: 15rpx;
  padding: 10rpx;
  width: 100%;
}
.index_nav {
  padding: 10rpx;
  display: flex;
}
.index_nav navigator {
  background-color: #FFF;
  padding: 40rpx;
  flex: 1;
}
.index_nav navigator image {
  width: 100%;
}
.index_nav navigator text {
  font-weight: bold;
  display: flex;
  justify-content: center;
}
.index_selected {
  display: flex;
  flex-wrap: wrap;
}
.item {
  background-color: #FFF;
  width: 350rpx;
  height: 450rpx;
  margin: 13rpx;
  border-radius: 15rpx;
}
.item image {
  border-radius: 15rpx;
  width: 100%;
  height: 300rpx;
}
.item .title {
  margin: 10rpx;
}
.item .price {
  font-size: 36rpx;
  color: #ce0404;
  font-size: bold;
}
